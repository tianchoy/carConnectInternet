.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
}
.popup-mask .popup-content {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  box-sizing: border-box;
}
.popup-mask .popup-content .popup-header {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 10rpx;
}
.popup-mask .popup-content .popup-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}
.popup-mask .popup-content .popup-item .label {
  color: #999;
  width: 120rpx;
}
.popup-mask .popup-content .btn-group {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}
.popup-mask .popup-content .btn-group .popup-btn {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
}