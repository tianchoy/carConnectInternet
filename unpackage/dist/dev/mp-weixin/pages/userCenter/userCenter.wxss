.container {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.container .user-info-box {
  width: 100%;
  padding: 40rpx 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .user-info-box .user-info {
  margin-left: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
.container .list {
  background-color: #f5f5f5;
  padding: 30rpx;
  border-radius: 20rpx;
  margin: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container .list .badge {
  width: 33rpx;
  height: 33rpx;
  margin-left: 20rpx;
}