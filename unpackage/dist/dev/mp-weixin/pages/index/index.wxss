.container {
  position: relative;
  width: 100%;
  height: 100%;
}
.container .mapBox {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}
#fenceMap {
  flex: 1;
}
.control-panel {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  gap: 10rpx;
  position: absolute;
  z-index: 2;
}
.control-panel button {
  flex: 1;
  min-width: 150rpx;
  font-size: 28rpx;
}
.control-panel slider {
  width: 100%;
  margin: 10rpx 0;
}
.info-panel {
  padding: 20rpx;
  background-color: #f5f5f5;
  position: absolute;
  right: 0;
  z-index: 2;
}
.info-panel .section-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}
.info-panel .point-list {
  position: absolute;
  z-index: 2;
}
.info-panel .point-list scroll-view {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
}
.info-panel .point-list .point-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}
.info-panel .point-list .point-item text {
  font-size: 26rpx;
  color: #333;
}
.info-panel .point-list .point-item button {
  margin: 0;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.info-panel .track-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.info-panel .track-info text {
  font-size: 26rpx;
  color: #333;
}